@model DepartmentEditViewModel


@{
    ViewData["Title"] = "Edit";
}





<div calss="row justify-content align-items-center flex-column  ">

    <h1 class=" col-6 my-4">Edit Department </h1>

    <form asp-action="Edit" method="post" class=" col-6">

        <div class="form-group mb-3">
            <label class=" form-label" asp-for="Code"></label>
            <input asp-for="Code" class=" form-control" />
            <span asp-validation-for="Code" class=" text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class=" form-label" asp-for="Name"></label>
            <input asp-for="Name" class=" form-control" />
            <span asp-validation-for="Name" class=" text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class=" form-label" asp-for="Description"></label>
            <textarea asp-for="Description" class=" form-control"></textarea>
        </div>
        <div class="form-group mb-3">
            <label class=" form-label" asp-for="CreationDate"></label>
            <input type="date" asp-for="CreationDate" class=" form-control" />
        </div>


        <div class=" mt-4">
            <input type="submit" value="Save" class="btn btn-success" />|
            <a asp-action="Index" class=" btn btn-light"> Cancel </a>

        </div>
    </form>

</div>

@section ValidationScrips {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}